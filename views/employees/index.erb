<form action="/employees" method="get" class="filter">
    <input type="hidden" name="see-terminated" value="false">
    <button>See Current</button>
</form>
<form action="/employees" method="get" class="filter">
    <input type="hidden" name="see-terminated" value="true">
    <button>See terminated</button>
</form>

<h2>Employees</h2>
<table> 
    <tr>
        <th></th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Phone</th>
        <th COLSPAN=3></th>
    </tr>
    <% @employees.each do |employee| %>
        <tr>
            <td>PICTURE</td>
            <td><%= employee.first_name %></td>
            <td><%= employee.last_name %></td>
            <td><%= employee.phone %></td>
            <td><%= employee.dob %></td>
            <td><a href="/employees/<%= employee.id %>/edit">Edit</a></td>
            <td><a href="/employees/<%= employee.id %>">Show</a></td>
        </tr>
    <% end %>
</table>