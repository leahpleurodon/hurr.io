<style>
    .profile-img{
        background-image: url(<%= @client.photo%>);
        background-size: cover;
        width: 20vh;
        height: 20vh;
        margin: auto;
        background-position: 50% 50%;
        border-radius: 20vh;
    }
 </style>
<div class="container">
    <h2>My Account</h2>
        <% if !!@client.photo %>
            <div class="profile-img">
                &nbsp;
            </div>
        <% end %>
        <form action='/client/me/image' enctype="multipart/form-data" method='POST'>
            <input name="file" type="file" />
            <input type="submit" value="Upload New Pic" />
        </form>
       (<a href="/client/me/edit">Edit my Account</a>|
        <form action="/client/me/deactivate" method="post" class="record-edit inline-form">
            <input type="hidden" name="_method" value="put">
        <button >Deactivate My Account</button>
        </form>)
    <div class="profile">
        <h3>First Name</h3>
        <%= @client.first_name %>
        <h3>Last Name</h3>
        <%= @client.last_name %>
        <h3>Preferred Name</h3>
        <%= @client.preferred_name %>
        <h3>Title</h3>
        <%= @client.title %>
        <h3>Email</h3>
        <%= @client.email %>
        <h3>Date of Birth</h3>
        <%= @client.dob %>
        <h3>Phone</h3>
        <%= @client.phone %>
        <h3>Last Updated</h3>
        <%= @client.last_update %>
        <h3>Date Created</h3>
        <%= @client.date_created %>
        <form action="/client/me/deactivate" method="post">
            <input type="hidden" name="_method" value="put">
            <button>Deactivate My Account</button>
        </form>
    </div>
    <div class="notes">
        <h2>My Notes:</h2>
        <% @client_notes.each do |note| %>
        <hr>
            <p><%= note.note %></p>- 
           <p>Created on:
            <%= get_date_stringDMY(note.date_created) %>
            By:
            <%= note.employee.full_preferred_name %></p>
        <hr>
        <% end %>
    </div>
</div>